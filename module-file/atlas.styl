.atlas{
  width:100%;
  padding:40px 0 20px;
  box-sizing: border-box;
  background: #f4f4f4;
  object-fit contain;
  object-position: left top;
}
.atlas-content{
  width:90%;
  margin:0 auto;
  display: flex
  align-items: center;
  justify-content center;
  flex-wrap: wrap;
}
.atlas-content-item {
  width: 260px;
  margin: 0 20px 20px 0;
  background: #fff;
  border-radius: 4px;
  overflow: hidden;
  cursor: pointer;
  transition: .15s;
}
.atlas-content-item:hover{
  box-shadow: 1px 1px 20px #000;
}
.atlas-content-item p{
  font-size:12px;
  height:40px;
  line-height: 40px;
  padding: 0 20px;
  box-sizing: border-box;
  margin: 0;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.atlas img{
  width:260px;
  height: 195px;
  object-fit cover;
  margin: 0;
  display block;
  background-position: top left;
}
.atlas-page{
  width: 40%;
  margin: 3rem auto;
}